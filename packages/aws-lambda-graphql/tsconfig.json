{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2018", "esnext.asynciterable"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/fixtures/**"
  ]
}
